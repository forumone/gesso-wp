{% set classes = [
  'c-details',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

{% set summary_classes = [
  'c-details__summary',
  required ?'is-required' : '',
]|join(' ')|trim %}

<details class="{{ classes }}">
  {% if details_summary %}
    <summary class="{{ summary_classes }}">{{ details_summary }}</summary>
  {% endif %}
  <div class="c-details__content">
    {% if details_description %}
      <div class="c-details__description">{{ details_description }}</div>
    {% endif %}
    {{ details_content }}
  </div>
</details>
