{% set classes = [
  'c-form-item__textarea',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

{# ID #}
{% if id is not empty %}
  {% set attributes_to_add = attributes_to_add ~ 'id="{{ id }}" ' %}
{% endif %}

{# Cols #}
{% if cols is not empty %}
  {% set attributes_to_add = attributes_to_add ~ 'cols="{{ cols }}" ' %}
{% endif %}

{# Rows #}
{% if rows is not empty %}
  {% set attributes_to_add = attributes_to_add ~ 'rows="{{ rows }}" ' %}
{% endif %}

{# Placeholder #}
{% if placeholder is not empty %}
  {% set attributes_to_add = attributes_to_add ~ 'placeholder="{{ placeholder }}" ' %}
{% endif %}

{# Disabled #}
{% if disabled or is_disabled %}
  {% set attributes_to_add = attributes_to_add ~ 'disabled="{{ disabled }}" ' %}
{% endif %}

{# Required #}
{% if required or is_required %}
  {% set attributes_to_add = attributes_to_add ~ 'required="{{ required }}" aria-required="true" ' %}
{% endif %}

{# Described by #}
{% if described_by is not empty %}
  {% set attributes_to_add = attributes_to_add ~ 'aria-describedby="{{ described_by }}" ' %}
{% endif %}

<textarea class="{{ classes }}"{% if attributes_to_add is not empty %} {{ attributes_to_add }}{% endif %}>{{ value }}</textarea>
