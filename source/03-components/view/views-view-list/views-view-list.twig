{% set title_classes = [
  title_modifier_classes ? title_modifier_classes : '',
]|join(' ')|trim %}

{% set list_classes = [
  list_modifier_classes ? list_modifier_classes : '',
]|join(' ')|trim %}

{% set item_classes = [
  item_modifier_classes ? item_modifier_classes : '',
]|join(' ')|trim %}

{% if not hide_wrapper %}
  <div{{ attributes }}>
{% endif %}

{% if title %}
  <{{ title_element ?: 'h3' }} class="{{ title_classes }}">{{ title }}</{{ title_element ?: 'h3' }}>
{% endif %}

  <{{ list.type }} class="{{ list_classes }}">


    {% for row in rows %}
      <li class="{{ item_classes }}">
        {{- row.content -}}
      </li>
    {% endfor %}

  </{{ list.type }}>

{% if not hide_wrapper %}
  </div>
{% endif %}
