{{ attach_library('core/drupal.dropbutton') }}

{% set classes = [
  'c-dropbutton',
  'js-dropbutton',
  'has-multiple',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

<div class="{{ classes }}">
  <ul class="c-dropbutton__list js-dropbutton-list">
    {%- for item in links -%}
    <li class="c-dropbutton__item">
      {%- if item.link -%}
        <a class="c-button c-dropbutton__button"{% if item.href %} href={{ item.href }}{% endif %}>
          {{ item.text }}
        </a>
      {%- elseif item.text_attributes -%}
        <span{{ item.text_attributes }}>{{ item.text }}</span>
      {%- else -%}
        {{ item.text }}
      {%- endif -%}
    </li>
    {%- endfor -%}
  </ul>
</div>
