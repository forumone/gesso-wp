{% set classes = [
  'l-nav',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

{% set title_classes = [
  title_modifier_classes ? title_modifier_classes : '',
  hide_title ? 'u-visually-hidden' : '',
]|join(' ')|trim %}

{% if is_demo and not nav_content %}
  {% import '@global/gesso.macro.twig' as macros %}
  {% set nav_content = macros.sample_content('Nav Layout Content') %}
{% endif %}

<nav class="{{ classes }}" role="navigation" aria-labelledby="{{ nav_id }}">
  <{{ title_element ?: 'h2' }}
    class="{{ title_classes }}" id="{{ nav_id }}">{{ title }}</{{ title_element ?: 'h2' }}>
  {% block content %}
    {{ nav_content }}
  {% endblock %}
</nav>
