{% set classes = [
  'l-content',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

{% set constrain_classes = [
  'l-constrain',
  constrain_modifier_classes ? constrain_modifier_classes : '',
]|join(' ')|trim %}

{% if is_demo and not content_content %}
  {% import '@global/gesso.macro.twig' as macros %}
  {% set content_content = macros.sample_content('Content Layout Content') %}
{% endif %}

<div {{ add_attributes({ 'class': classes }) }}>
  {% if has_constrain %}
    <div {{ add_attributes({ 'class': constrain_classes }) }}>
  {% endif %}
  {% block content %}
    {{ content_content }}
  {% endblock %}
  {% if has_constrain %}
    </div>
  {% endif %}
</div>
