{% extends "tease.twig" %}

{% block content %}
  <!-- Provided by templates/tease-post.twig -->
  {% include "@components/image-teaser/image-teaser.twig" with
    {
      wp_id: post.id,
      url: post.link,
      title: post.title,
      image: post.thumbnail ? include('@base/images/thumbnail-image.twig', {
        img: {
          thumbnail: {
            src: post.thumbnail.src('small'),
            alt: post.thumnbail.alt
          }
        }
      }),
      summary: post.get_preview
    }
  %}
{% endblock %}
