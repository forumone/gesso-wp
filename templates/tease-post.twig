{% extends 'tease.twig' %}

{% block content %}
  {% if post.thumbnail %}
    {% set image_teaser_image %}
      {% include '@base/images/thumbnail-image.twig' with {
        'img': {
          'thumbnail': {
            'src': post.thumbnail.src('small'),
            'alt': post.thumbnail.alt
          }
        }
      } %}
    {% endset %}
  {% endif %}
  <!-- Provided by templates/tease-post.twig -->
  {% include '@components/image-teaser/image-teaser.twig' with {
    'url': post.link,
    'title': post.title,
    'image': image_teaser_image ? image_teaser_image : false,
    'summary': post.get_preview
  } %}
{% endblock %}
